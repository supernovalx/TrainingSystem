@{
    ViewBag.Title = "Assign Topic";
}

<h2>Assign topic to @ViewBag.TrainerID</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Topic</label>
            <div class="col-md-10">
                <input type="hidden" name="trainerID" value="@ViewBag.TrainerID" />
                @Html.DropDownList("TopicID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

