@model TrainingSystem.Models.Category

@{
    ViewBag.Title = "Category Details";
}

<h2>@Model.Name</h2>

<div>
    <img class="course-img" src="~/Content/Images/@Model.Image" alt="@Model.Description" />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
    <h4>Courses in this category:</h4>
    <ol>
        @foreach (var course in Model.Courses)
        {
            <li><a href="/Courses/Details/@course.CourseID">@course.Name</a></li>
        }
    </ol>

</div>
<p>
    @if (Session["role"] != null && Session["role"].ToString() == "TrainingStaff")
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) <span>|</span>
    }
    @Html.ActionLink("Back to List", "Index")
</p>
