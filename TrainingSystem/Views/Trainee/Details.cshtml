        @foreach (var course in Model.Courses)
        {
            <li>
                @course.Name
                @if (Session["role"] != null && Session["role"].ToString() == "TrainingStaff")
                {
                    <a href="/Trainee/RemoveAssignCourse?traineeID=@Model.UserID&courseID=@course.CourseID">Remove</a>
                }
            </li>

        }
