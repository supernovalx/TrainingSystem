@model IEnumerable<TrainingSystem.Models.User>

@{
    ViewBag.Title = "Trainer";
}

<h2>List of trainers</h2>
<hr />

@if (Session["role"] != null && "Administrator,TrainingStaff".Contains(Session["role"].ToString()))
{
    <a class="btn btn-success" href="/Trainer/Create" role="button"><i class="fas fa-plus"></i> New trainer</a>
    <hr />
}

<table class="table table-striped">
    <tr>
        <th>
            Trainer ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.UserID })
                @if (Session["role"] != null && "Administrator,TrainingStaff".Contains(Session["role"].ToString()))
                {
                    <span>|</span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID })
                    <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserID })
                }
            </td>
        </tr>
    }

</table>
